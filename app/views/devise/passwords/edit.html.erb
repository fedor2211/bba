<h2><%= t(".change_your_password") %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field col-md-4 form-group mb-2">
    <%= f.label :password, t(".new_password"), class: "form-label" %>
    <% if @minimum_password_length %>
      <em class="form-text">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="field col-md-4 form-group mb-2">
    <%= f.label :password_confirmation,t(".confirm_new_password"), class: "form-label" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="actions form-group col-md-4">
    <%= f.submit t(".change_my_password"), class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
