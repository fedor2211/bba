<h2 class="mb-3">Регистрация</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false } ) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field mb-3 col-6">
    <%= f.label :email, "Электронная почта", class: "form-label" %><br>
    <%= f.email_field :email, autofocus: true, autocomplete: "Электронаая почта", class: "form-control" %>
  </div>

  <div class="field mb-3 col-6">
    <%= f.label :password, "Пароль", class: "form-label" %>
    <% if @minimum_password_length %>
    <em class="form-text">(<%= @minimum_password_length %> символов минимум)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "Пароль", class: "form-control" %>
  </div>

  <div class="field mb-3 col-6">
    <%= f.label :password_confirmation, "Подтверждение пароля", class: "form-label" %><br>
    <%= f.password_field :password_confirmation, autocomplete: "Подтверждение пароля", class: "form-control" %>
  </div>

  <div class="actions mb-3 col-6">
    <%= f.submit "Зарегистрироваться", class: "btn btn-primary", data: { turbo_method: :post } %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
