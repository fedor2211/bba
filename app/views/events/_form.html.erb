<%= form_for @event, data: { turbo: false } do |f| %>
  <%= render 'partials/form_errors', resource: @event %>

  <div class="form-group mb-3">
    <%= f.label :title, class: "form-label mb-2" %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :address, class: "form-label mb-2" %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :datetime, class: "form-label mb-2" %>
    <p><%= f.datetime_select :datetime, class: 'form-control' %></p>
  </div>

  <div class="form-group mb-3">
    <%= f.label :description, class: "form-label mb-2" %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="actions mb-3">
    <%= f.submit I18n.t("views.events.form_save_label"), class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to I18n.t("views.links.back"), :back %>
