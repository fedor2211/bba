<div class="event">
  <div class="event-info row rounded">
    <%= content_tag 'div', '', class: 'event-background',
      style: "background-image: url(#{asset_path('event_thumb.jpg')})" %>
    <div class="col-md-12">

      <div class="event-info-inner row p-3">
        <div class="col-md-6">
          <div class="event-description">
            <h1><%= @event.title %></h1>
            <h3><%= l @event.datetime, format: :short %></h3>
            <h3><small><%= link_to @event.address,
                "https://yandex.ru/maps/?text=#{@event.address}" %></small></h3>
            <p><%= @event.description %></p>
          </div>

          <% if current_user_can_edit?(@event) %>
            <div class="d-flex justify-content-start">
              <%= link_to t(".events.update_action"), edit_event_path(@event),
                class: "btn btn-primary m-1" %>
              <%= button_to t(".events.destroy.action"), event_path(@event),
                class: "btn btn-danger m-1", form: { data: { turbo_confirm: t(".events.destroy.are_you_sure") } }, method: :delete %>
            </div>
          <% end%>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <div class="event-comments buffer-top">
        <div class="my-3">
          <%= render partial: "comments/form", locals: {
            comment: @new_comment || @event.comments.build,
            event: @event
          } %>
        </div>
        <div class="my-3">
          <h4 class="py-3 border-bottom"><%= t("views.comments.plural") %></h4>
          <%= render partial: "comments/comment",
            collection: @event.comments.except(@new_comment) %>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="event-owner mb-3">
        <h4><%= t("views.events.host") %></h4>
          <p><%= render partial: 'users/user', object: @event.user %></p>
      </div>
      <div class="event-subscriptions mb-3">
        <h4><%= t("views.events.participants") %></h4>
          <div class="d-flex flex-column">
            <%= render partial: "subscriptions/subscription",
              collection: @event.subscriptions.except(@new_subscription) %>
          </div>
      </div>
      <% if current_user_can_subscribe?(@event) %>
        <div class="event-subscription-form mb-3">
          <h4><%= t("views.subscriptions.form_title") %></h4>
          <div>
            <%= render partial: "subscriptions/form", locals: {
              event: @event,
              subscription: @new_subscription || @event.subscriptions.build
            } %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
