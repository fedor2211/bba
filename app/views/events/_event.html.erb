<div class="col-sm-6 col-md-4 mb-4">
  <div class="thumbnail">

    <%= content_tag "div", "", class: "event-background",
      style: "background-image: url(#{event_photo(event)})" %>

    <div class="thumbnail-inner event-info-inner p-3">
      <div class="caption mb-1">
        <div class="event-description">
          <h3><%= link_to event.title, event_path(event) %></h3>
          <h3><small><%= l event.datetime, format: :short %></small></h3>
          <div class="buffer-both"><%= event.address %></div>
        </div>
      </div>
      <div>
        <% event.visitors.each do |user| %>
          <%= user_thumb_link(user) %>
        <% end %>
      </div>
    </div>
  </div>
</div>
