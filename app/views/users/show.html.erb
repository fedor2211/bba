<p style="color: green"><%= notice %></p>

<%= render @user %>

<div class="row">
  <div class="col-md-12">
    <% if @user.events.any? %>
      <h3><%= I18n.t("views.users.events_organized") %></h3>
      <div class="row">
        <%= render partial: 'events/event', collection: @user.events %>
      </div>
    <% else %>
      <p class="buffer-top text-center"><%= I18n.t("views.users.no_events_organized") %></p>
    <% end %>
  </div>
</div>
