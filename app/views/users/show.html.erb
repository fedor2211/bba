<div>
  <p style="color: green"><%= notice %></p>

  <div class="text-center">
    <h1><%= @user.name %></h1>

    <%= image_tag user_avatar(@user) %>

    <% if @user == current_user %>
      <div>
        <%= link_to t("views.users.edit_profile"), edit_user_registration_path(@user), class: "btn btn-primary m-1" %>
      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-md-12">
      <% if @user.events.any? %>
        <h3><%= t("views.users.events_organized") %></h3>
        <div class="row">
          <%= render partial: 'events/event', collection: @user.events %>
        </div>
      <% else %>
        <p class="buffer-top text-center"><%= t("views.users.no_events_organized") %></p>
      <% end %>
    </div>
  </div>
</div>
