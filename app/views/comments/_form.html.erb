<h4><%= t("views.comments.new") %></h4>

<%= form_for [event, comment], data: { turbo: false } do |f| %>
  <%= render "partials/form_errors", resource: comment %>

  <div class="form-group mb-3">
    <%= f.label :body, class: "form-label mb-1" %>
    <%= f.text_area :body, class: "form-control" %>
  </div>

  <% unless user_signed_in? %>
      <div class="form-group mb-3">
        <%= f.label :user_name, class: "form-label mb-1" %>
        <%= f.text_field :user_name, class: "form-control" %>
      </div>
  <% end %>

  <div class="actions mb-3">
    <%= f.submit "Отправить", class: "btn btn-primary" %>
  </div>
<% end %>
